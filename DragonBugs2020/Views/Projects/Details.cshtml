@model DragonBugs2020.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageData)
        </dd>

        <dt class="col-sm-2">
          Team Members
        </dt>
        <dd class="col-sm-10">
            @foreach (var user in Model.ProjectUsers)
            {
                @user.User.FullName <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AssignUsers" asp-route-id="@Model.Id">Assign Team Members</a>
    <a asp-action="RemoveUsers" asp-route-id="@Model.Id">Remove Team Members</a>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
